
@{
    ViewBag.Title = "Contato";
}

<div class="container">
    <div class="page-header">
        <h1> Contato <span class="glyphicon glyphicon-envelope"></span></h1>
    </div>

    <form class="form-horizontal">
        <fieldset>
            <div class="form-group">
                <label class="col-md-4 control-label" for="textnome_input"> Nome:</label>
                <div class="col-md-4">
                    <input type="text" name="textnome_input" id="textnome_input" placeholder="Seu nome por favor" class="form-control input-md">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="textemail_input"> Email:</label>
                <div class="col-md-4">
                    <input type="email" name="textemail_input" id="textemail_input" placeholder="Seu email por favor" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label"> Mensagem: </label>
                <div class="col-md-4">
                    <textarea name="nome" rows="5" cols="80" class="form-control"> Digite aqui sua mensagem </textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="singlebutton_enviar">Enviar</label>
                <div class="col-md-4">
                    <button id="enviar" name="enviar" class="btn btn-primary">enviar</button>
                </div>
            </div>

        </fieldset>
    </form>


</div>

</>



